<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.example.sidedish.model.MenuListItem.Menu" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/im_menu_image"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:contentDescription="@string/menu_image"
            app:imageUrl="@{item.imageUrl}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_menu_label"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:text="@{item.name}"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/im_menu_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_menu_info"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{item.desc}"
            android:textColor="@color/cardview_shadow_start_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/im_menu_image"
            app:layout_constraintTop_toBottomOf="@id/tv_menu_label" />

        <TextView
            android:id="@+id/tv_after_cost"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@id/im_menu_image"
            app:layout_constraintTop_toBottomOf="@id/tv_menu_info"
            app:priceAmount="@{item.price}"
            tools:text="1299" />

        <TextView
            android:id="@+id/tv_before_cost"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/cardview_shadow_start_color"
            app:layout_constraintStart_toEndOf="@id/tv_after_cost"
            app:layout_constraintTop_toBottomOf="@id/tv_menu_info"
            app:priceAmount="@{item.priceBeforeDiscount}"
            app:strike="@{true}"
            app:visible="@{item.priceBeforeDiscount != null}"
            tools:text="14,500" />

        <TextView
            android:id="@+id/tv_launching_cost_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@{item.discountPolicy.getBackgroundDrawable(context)}"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@{item.discountPolicy.title}"
            android:textColor="@{item.discountPolicy.getTextColor(context)}"
            app:layout_constraintStart_toEndOf="@id/im_menu_image"
            app:layout_constraintTop_toBottomOf="@id/tv_after_cost"
            app:visible="@{item.discountPolicy != null}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>